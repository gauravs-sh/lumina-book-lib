{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "app",
    "components",
    "lib",
    "styles",
    "__tests__",
    "src"
  ],
  "exclude": ["node_modules"]
}
